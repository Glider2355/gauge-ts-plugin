<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>GaugeTS</id>
    <name>GaugeTS</name>
    <vendor>glider2355</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Spec ファイルタイプの登録 -->
        <fileType
                name="Spec File"
                language="Spec"
                extensions="spec"
                fieldName="INSTANCE"
                implementationClass="gauge.language.SpecFileType"/>

        <!-- パーサーの登録 -->
        <lang.parserDefinition
                language="Spec"
                implementationClass="gauge.language.SpecParserDefinition"/>

        <!-- Pluginの設定の登録 -->
        <projectConfigurable implementation="gauge.setting.SettingsConfigurable" displayName="gauge-ts Plugin Settings"/>

        <!-- コード補完の登録 -->
        <completion.contributor
                language="Spec"
                implementationClass="gauge.contributor.SpecCompletionContributor"/>
    </extensions>
</idea-plugin>
