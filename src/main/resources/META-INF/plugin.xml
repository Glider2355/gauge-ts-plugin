<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>GaugeTS</id>
    <name>GaugeTS</name>
    <vendor>glider2355</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>
    <depends>com.thoughtworks.gauge</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Pluginの設定の登録 -->
        <projectConfigurable instance="gauge.setting.SettingsConfigurable" displayName="GaugeTS Plugin"/>

        <!-- コード補完の登録 -->
        <completion.contributor
                language="Specification"
                implementationClass="gauge.contributor.SpecCompletionContributor"
                order="first"/>
    </extensions>
</idea-plugin>
